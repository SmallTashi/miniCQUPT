<?xml version="1.0" encoding="utf-8"?>


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <include layout="@layout/bg_layout_top_title"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        />
    <LinearLayout
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_marginStart="10dp"

        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <include layout="@layout/bg_question_kind"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginStart="20dp"
            />

        <TextView
            android:textSize="15sp"
            android:layout_marginStart="10dp"
            android:id="@+id/answer_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#222222"
            tools:text="题目题目题目题目" />
        <ImageView
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/line"
            tools:ignore="ContentDescription" />


    </LinearLayout>
        <RelativeLayout
            android:id="@+id/answer_item_top"
            android:layout_width="match_parent"
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/answer_mine_head"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"

                android:src="@mipmap/mine_default_avatar"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/answer_idName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textSize="13sp"
                android:layout_toEndOf="@id/answer_mine_head"
                tools:text="王尼玛" />

            <TextView
                android:textSize="12sp"
                android:id="@+id/answer_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_below="@id/answer_idName"
                android:layout_toEndOf="@+id/answer_mine_head"
                tools:text="2018-5-57" />
            <TextView
                android:id="@+id/answer_item_adopt"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:drawablePadding="6dp"
                android:drawableStart="@mipmap/question_detail_answer_finish"
                android:textColor="@color/adopt_text"
                tools:text="已采纳"
                android:textSize="13sp"

                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_centerVertical="true"
                android:textColor="@color/list_text"
                android:id="@+id/answer_item_detail"
                android:layout_width="wrap_content"
                android:textSize="14sp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                tools:text="描述描述描述描述描述描述描述" />

        </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/bg_color"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#888888"
        android:padding="10dp"
        android:text="评 论 40"

        tools:ignore="HardcodedText" />
    <ImageView
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/line"
        tools:ignore="ContentDescription" />



    </LinearLayout>

