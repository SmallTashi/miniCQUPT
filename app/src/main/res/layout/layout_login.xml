<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/bg_layout_login" />

    <android.support.v7.widget.CardView
        android:id="@+id/login_card"
        android:layout_marginTop="225dp"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="280dp"

        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        app:cardElevation="3dp">


        <LinearLayout

            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:orientation="vertical"
            android:weightSum="9">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="bottom"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:src="@mipmap/ic_login_account"
                    tools:ignore="ContentDescription" />

                <EditText
                    android:textCursorDrawable="@drawable/bg_login"
                    android:text=""
                    android:maxLength="10"
                    android:id="@+id/login_stuNum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:drawableBottom="@drawable/line"
                    android:drawablePadding="10dp"
                    android:gravity="bottom"
                    android:hint="@string/login_stuNum"
                    android:inputType="number"
                    android:textSize="16sp" />
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:src="@drawable/line"
                tools:ignore="ContentDescription" />

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="bottom"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:src="@mipmap/ic_login_password"
                    tools:ignore="ContentDescription" />

                <EditText
                    android:textCursorDrawable="@drawable/bg_login"

                    android:text=""
                    android:maxLength="6"
                    android:id="@+id/login_idNum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:drawableBottom="@drawable/line"
                    android:drawablePadding="10dp"
                    android:gravity="bottom"
                    android:hint="@string/idNum"
                    android:inputType="numberPassword"
                    android:textSize="16sp" />
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:src="@drawable/line"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5" />

            <Button
                android:id="@+id/login_button"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:clickable="true"

                android:layout_margin="8dp"
                android:background="@drawable/bg_login_button"
                android:text="@string/login"
                android:textColor="@color/mine_text"
                android:textSize="16sp"
                android:focusable="true" />


        </LinearLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>