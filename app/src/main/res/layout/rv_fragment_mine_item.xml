<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@mipmap/mine_bg_me_item_full"
    xmlns:tools="http://schemas.android.com/tools"
   >

    <ImageView
        android:id="@+id/mine_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginStart="25dp"
        tools:ignore="ContentDescription"
        tools:src="@mipmap/mine_ic_me_draft" />

    <TextView
        android:id="@+id/mine_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_toEndOf="@+id/mine_item_icon"
        android:textSize="16sp"
        tools:text="草 稿 箱" />

    <ImageButton

        android:id="@+id/mine_icon_goto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="25dp"
        android:src="@mipmap/mine_goto"
        tools:ignore="ContentDescription" />
</RelativeLayout>
